# ── MongoDB ──────────────────────────────────────────────────
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/?appName=myapp
DB_NAME=mandi_insights

# ── LLM Provider ────────────────────────────────────────────
# "google" (default), "openai", or "openrouter"
LLM_PROVIDER=google
GOOGLE_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=
# OpenRouter model (default: google/gemini-2.0-flash-001)
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# ── Agent Config ────────────────────────────────────────────
# Input mode: "mongo" (default) or "csv"
INPUT_MODE=mongo

# Logging mode: "mongo" (default) or "txt"
LOG_MODE=mongo

# Agent mode: "scrape" | "discover" | "discover_and_scrape" | "single_url"
AGENT_MODE=discover_and_scrape

# ── Playwright ──────────────────────────────────────────────
# Run browser headless (default: true)
HEADLESS=true

# ── Thresholds ──────────────────────────────────────────────
MAX_PAGES_PER_SOURCE=50
DISCOVERY_TIMEOUT_SECONDS=120
REQUEST_DELAY_MS=500
